{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "plugins": [
        "babel",
        "react"
    ],
    "globals": {
        "$": true,
        "jQuery": true,
        "WEBPACK": true,
        "dataLayer": true,
        "__webpack_public_path__": true
    },
    "rules": {
        "indent": [
            1,
            4,
            {
                "VariableDeclarator": "first",
                "ObjectExpression": "first",
                "ArrayExpression": "first",
                "ImportDeclaration": "first",
                "ignoredNodes": [
                    "TemplateLiteral"
                ]
            }
        ],
        "no-console": 0,
        "eqeqeq": 2,
        "no-mixed-spaces-and-tabs": [
            1,
            "smart-tabs"
        ],
        "vars-on-top": 2,
        "no-use-before-define": 2,
        "no-const-assign": 2,
        "no-var": 2,
        "arrow-spacing": [
            2,
            {
                "before": true,
                "after": true
            }
        ],
        "quotes": [
            1,
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "curly": [
            1,
            "multi-line",
            "consistent"
        ],
        "strict": [
            1,
            "never"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-unused-vars": [
            1,
            {
                "vars": "all",
                "args": "after-used"
            }
        ],
        "no-redeclare": [
            1,
            {
                "builtinGlobals": true
            }
        ],
        "brace-style": [
            1,
            "1tbs"
        ],
        "no-alert": 1,
        "object-shorthand": 1,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "react/jsx-no-duplicate-props": 1,
        "react/jsx-indent": "off",
        "react/react-in-jsx-scope": "off"
    }
}
